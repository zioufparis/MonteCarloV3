{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    }
}